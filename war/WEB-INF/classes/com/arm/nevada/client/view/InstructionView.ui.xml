<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with field="res"
		type="com.arm.nevada.client.view.design.ResourceBundle" />
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.checkBox { /*padding: 4px;*/
			
		}
		
		.textBox {
			width: 100%;
			padding-top: 0;
			border-width: 1px 0 1px 0;
			margin: 0;
			display: inline;
		}
		
		.fp {
			border-style: none;
			border-width: 0;
		}
		
		.root {
			margin-left: -10px;
			margin-right: -10px;
		}
	</ui:style>

	<g:HTMLPanel width="100%" addStyleNames="style.root">
		<table style="border-spacing: 0;">
			<tr>
				<td style="padding: 0 5px 0 5px;">
					<div style="cursor: pointer">
						<g:Image ui:field="breakpointImage" />
					</div>
				</td>
				<td style="width: 100%; padding: 0;">
					<g:TextBox ui:field="instructionTextBox" addStyleNames="{style.textBox}" />
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 